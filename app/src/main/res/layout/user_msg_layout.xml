<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/layout_margin_left"
    android:layout_marginTop="@dimen/layout_margin_left">

    <com.conghuy.mychat.customUI.RoundLayoutGroup
        android:id="@+id/ivLayout"
        style="@style/avatar_round"
        android:layout_marginLeft="@dimen/layout_margin_left">

        <ImageView
            android:id="@+id/iv"
            style="@style/avatar_iv" />
    </com.conghuy.mychat.customUI.RoundLayoutGroup>

    <LinearLayout
        style="@style/user_bg"
        android:layout_toRightOf="@+id/ivLayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_msg">

            <TextView
                android:id="@+id/tvMsg"
                android:autoLink="all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc" />

            <TextView
                android:id="@+id/tvTime"
                style="@style/tv_time" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
