<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_row"
    android:background="?android:attr/selectableItemBackground">


    <com.conghuy.mychat.customUI.RoundLayoutGroup
        android:id="@+id/ivLayout"
        style="@style/avatar_round"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/layout_margin_left">

        <ImageView
            android:id="@+id/iv"
            style="@style/avatar_iv" />
    </com.conghuy.mychat.customUI.RoundLayoutGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginRight="@dimen/layout_margin_left"
        android:layout_toRightOf="@+id/ivLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="xyz" />
    </LinearLayout>
    <!--<include layout="@layout/line_bottom_layout"/>-->
</RelativeLayout>
